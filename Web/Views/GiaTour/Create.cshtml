@model TourManagement.DTO.Dto_GiaTour

@{
    ViewBag.Title = "Thêm giá tour mới";
}


<h2>Thêm giá tour mới</h2>
<p>
    Tour du lịch: @ViewBag.TenTour
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.HiddenFor(model => model.Tour_Id)

    <div class="control-label col-md-2">Ngày bắt đầu</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control datepicker", @type = "date" } })
        @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="control-label col-md-2">Ngày kết thúc</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control datepicker", @type = "date" }})
            @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Giá (VNĐ)</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index/" + Model.Tour_Id, "GiaTour" )
</div>
