@model List<TourManagement.DTO.Dto_ThamQuan>

@{
    ViewBag.Title = "Lịch trình tham quan";
}
<p style="padding:20px 0px;">
    @Html.ActionLink("< Trở về danh sách tour du lịch", "Index/", "Tour")
</p>

<h2>Lịch trình tham quan</h2>
<p>
    Tour du lịch: @ViewBag.TenTour
</p>

<p>
    @Html.ActionLink("Thêm lịch trình mới", "Create", new { id = ViewBag.TourId })
</p>

<table class="table">
    <tr>

        <th>
            Mã địa điểm
        </th>
        <th>
            Tên địa điểm
        </th>
        <th>
            Thứ tự
        </th>
        <th>
            Hành động
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DiaDiem_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDiaDiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuTu)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { tourId = item.Tour_Id, diaDiemId = item.DiaDiem_Id }) |
                @Html.ActionLink("Xóa", "Delete", new { tourId = item.Tour_Id, diaDiemId = item.DiaDiem_Id })
            </td>
        </tr>
    }

</table>
