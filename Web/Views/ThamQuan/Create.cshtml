@model TourManagement.DTO.Dto_ThamQuan

@{
    ViewBag.Title = "Thêm lich trình mới";
}


<h2>Thêm lich trình mới</h2>
<p>
    Tour du lịch: @ViewBag.TenTour
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(model => model.Tour_Id)
        @Html.HiddenFor(model => model.ThuTu)

        <div class="control-label col-md-2">Địa điểm</div>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DiaDiem_Id, ViewBag.diaDiemList as SelectList, new { @class = "form-control" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách lịch trình", "Index/" + Model.Tour_Id, "ThamQuan" )
</div>
