@{
    ViewBag.Title = "Home Page";
}
<style>
    .hero-image {
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.5)), url('https://news.mit.edu/sites/default/files/styles/news_article__image_gallery/public/images/202101/MIT-Aircraft-Nox-01_0.jpg?itok=aWvMMKa6');
        height: 100vh;
        width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    .container {
        padding: 0;
    }

    .body-content {
        padding: 0;
        margin: 0;
        width: 100%;
    }
    .footer {
        text-align: center;
    }

    .hero-text {
        text-align: center;
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }

        .hero-text button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 10px 25px;
            color: black;
            background-color: #ddd;
            text-align: center;
            cursor: pointer;
        }

     .hero-text button:hover {
         background-color: #555;
         color: white;
     }
</style>

<div class="hero-image">
    <div class="hero-text">
        <h1 style="font-size:50px">CHƯƠNG TRÌNH QUẢN LÝ TOUR DU LỊCH</h1>
    </div>
</div>
