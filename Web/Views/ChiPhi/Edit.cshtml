@model TourManagement.DTO.Dto_ChiPhi
@{
    ViewBag.Title = "Chỉnh sửa loại chi phí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Loại chi phí</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DoanDuLich_Id)
    
    <div class="form-group">
        <div class="control-label col-md-2">Tên loại chi phí</div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.TenLoaiChiPhi, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Số tiền</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoTien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoTien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index/" +Model.DoanDuLich_Id, "ChiPhi")
</div>
