@model TourManagement.DTO.Dto_PhanCong

@{
    ViewBag.Title = "Thêm phân công mới";
}


<h2>Thêm phân công mới</h2>
<p>
    Đoàn du lịch: @ViewBag.TenDoanDuLich
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(model => model.NV_Id)
        @Html.HiddenFor(model => model.NhiemVu)

        <div class="control-label col-md-2">Tên đoàn du lịch</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDoan, "", new { @class = "text-danger" })
        </div>
        <div class="control-label col-md-2">Nhiệm vụ</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NhiemVu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NhiemVu, "", new { @class = "text-danger" })
        </div>
    </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (ViewBag.Error != null)
                {
                    <h5 style="color:red">@ViewBag.Error</h5>
                }
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách lịch trình", "Index/" + Model.NhanVien_Id, "PhanCong")
</div>
