@model TourManagement.DTO.Dto_PhanCong

@{
    ViewBag.Title = "Cập nhật Phân Công";
}

<h2>Cập nhật</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Phân Công</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NV_Id)

    <div class="form-group">
        <div class="control-label col-md-2">Tên đoàn du lịch</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDoan, new { htmlAttributes = new { @class = "form-control", @value = Model.TenDoan } })
            @Html.ValidationMessageFor(model => model.TenDoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Nhiệm vụ</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NhiemVu, new { htmlAttributes = new { @class = "form-control", @value = Model.NhiemVu} })
            @Html.ValidationMessageFor(model => model.NhiemVu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>




</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
