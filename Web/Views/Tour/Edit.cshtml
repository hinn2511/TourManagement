@model TourManagement.DTO.Dto_Tour

@{
    ViewBag.Title = "Cập nhật tour du lịch";
}

<h2>Cập nhật</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Tour du lịch</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="control-label col-md-2">Tên tour</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control", @value = Model.TenTour } })
            @Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Đặc điểm</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DacDiem, new { htmlAttributes = new { @class = "form-control", @value = Model.DacDiem } })
            @Html.ValidationMessageFor(model => model.DacDiem, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Loại tour</div>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Loai_Id, ViewBag.loaiTourList as SelectList, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null)
            {
                <h5 style="color:red">@ViewBag.Error</h5>
            }
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
