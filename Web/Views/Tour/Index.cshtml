@model List<TourManagement.DTO.Dto_Tour>

@{
    ViewData["Title"] = "Tour du lịch";
}

<h2>Quản lý tour du lịch</h2>

<p>
    @Html.ActionLink("Tạo tour du lịch mới", "Create")
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Tìm kiếm theo tên: <input type="text" name="SearchString" />
            <input type="submit" value="Tìm kiếm" class="btn btn-default" /> |
            @Html.ActionLink("Làm mới", "Index")
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã tour
            </th>
            <th>
                Tên tour
            </th>
            <th>
                Loại tour
            </th>
            <th>
                Giá (VNĐ)
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => (item.Gia))
            </td>
            <td>
                @Html.ActionLink("Giá", "Index/" + @item.Id, "GiaTour", @item.Id, item)  |
                @Html.ActionLink("Lịch trình tham quan", "Index/" + @item.Id, "ThamQuan", @item.Id, item)  |
                @Html.ActionLink("Chi tiết", "Detail/" + @item.Id, @item.Id, item)  |
                @Html.ActionLink("Sửa", "Edit/" + @item.Id, @item.Id, item)  |
                @Html.ActionLink("Xóa", "Delete/" + @item.Id, @item.Id, item)
            </td>
        </tr>
        }
    </tbody>
</table>