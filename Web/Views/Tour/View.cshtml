@model IEnumerable<TourManagement.DTO.Dto_Tour>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã tour
        </th>
        <th>
            Tên tour
        </th>
        <th>
            Loại tour
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
